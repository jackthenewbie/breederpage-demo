<!-- Monday -->
<div class="flexRow spaceBetween">
    <label for="Monday" style="color: #333;">Monday</label>
    <div class="flexRow">
        <div style="margin-right: 20px;">
            <input style="margin-right: 5px;" type="radio" id="option1_Monday" name="MondayStatus" value="true"
                onclick="toggleTiming('Monday', true)" <% if (mondayStatus==='true' ) { %> checked <% } %>>
                <label for="open_Monday">Open</label><br>
        </div>
        <div>
            <input style="margin-right: 5px;" type="radio" id="option2_Monday" name="MondayStatus" value="false"
                onclick="toggleTiming('Monday', false)" <% if (mondayStatus==='false' || mondayStatus==='' ) { %>
            checked <% } %>>
                <label for="closed_Monday">Closed</label><br>
        </div>
    </div>
</div>
<!-- Monday Toggle Timings -->
<div class="timing Monday_timing">
    <div>
        <label for="address">Opening Time</label>
        <input type="time" name="openingTimeMonday" value="<%= openingTimeMonday %>">
    </div>
    <div>
        <label for="address">Closing Time</label>
        <input type="time" name="closingTimeMonday" value="<%= closingTimeMonday %>">
    </div>
</div>
