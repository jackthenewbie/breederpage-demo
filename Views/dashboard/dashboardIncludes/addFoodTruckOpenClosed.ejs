<script>
    window.onload = function () {
        // Check if the "Open" radio button is pre-selected for each day and toggle timing div accordingly
        toggleTiming('Monday', document.getElementById('option1_Monday').checked);
        toggleTiming('Tuesday', document.getElementById('option1_Tuesday').checked);
        toggleTiming('Wednesday', document.getElementById('option1_Wednesday').checked);
        toggleTiming('Thursday', document.getElementById('option1_Thursday').checked);
        toggleTiming('Friday', document.getElementById('option1_Friday').checked);
        toggleTiming('Saturday', document.getElementById('option1_Saturday').checked);
        toggleTiming('Sunday', document.getElementById('option1_Sunday').checked);
    }

    function toggleTiming(day, isOpen) {
        var timingDiv = document.querySelector("." + day + "_timing");
        if (isOpen) {
            timingDiv.style.height = "70px";
        } else {
            timingDiv.style.height = "0";
        }
    }
</script>
 
