<%- include('../homeIncludes/header.ejs') %>
    <section id="authentication">
        <div id="authenticationImage">
            <div>
                <img src="/img/streetFood2.png" alt="">
                <h1 class="heading alignCenter"
                    style="font-size: 40px; letter-spacing: 2px; color: rgb(198, 101, 11); font-weight: 500;">Taste On
                    Wheels</h1>
            </div>
        </div>
        <div id="authenticationForm">
            <div class="authHeader">
                <ul class="">
                    <li><a href="/">Home</a></li>
                </ul>
                <ul class="navBtns">
                    <li><a class="btnOrange" href="/login">Login</a></li>
                </ul>
            </div>
            <br>
            <section class="formHeader">
                <div>
                    <div style="text-align: center;">
                        <img style="text-align: center;" src="/img/logo.png" alt="">
                    </div>
                    <h1 class="alignCenter heading " style=" padding:10px 0">Create TOW Account</h1>
                    <h1 class="<%= className%>">
                        <%=message%>
                    </h1>
                    <form action="/signup" method="post" id="authForm">
                        <label for="firstName">First Name</label>
                        <input name="firstName" type="text" placeholder="John" value="<%=firstName%>">

                        <label for="lastName">Last Name</label>
                        <input name="lastName" type="text" placeholder="Doe" value="<%=lastName%>">

                        <label for="Email">Email</label>
                        <input name="email" type="text" placeholder="john@gmail.com" value="<%=email%>">

                        <label for="Password">Password</label>
                        <input name="password" type="password" placeholder="At least 6 characters" value="<%=password%>">

                        <label for="Password">Confirm Password</label>
                        <input name="confirmPassword" type="password" placeholder="Enter password again">

                        <br>
                        <div class="alignCenter">
                            <p style="margin-bottom: 10px; ">Taste on wheels account allows you to give feedback to food
                                trucks, also you can add and manage your foodtruck on TOW website using this account.
                            </p>
                            <p>Already have an account ?, <a href="/login">Click here to login</a> </p>
                            <button id="submitButton" type="submit">Sign Up</button>
                        </div>
                    </form>
                </div>
            </section>


        </div>
        </div>
    </section>

    </body>

    </html>