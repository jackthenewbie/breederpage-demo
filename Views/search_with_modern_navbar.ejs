<!DOCTYPE html>
<html>
  <head>
    <title>Search - Taste on Wheels</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="/assets/css/main.css" />
    <noscript><link rel="stylesheet" href="/assets/css/noscript.css" /></noscript>
    <style>
      /* Modern Navigation Bar */
      .topnav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: #3b3f58;
        padding: 1em 2em;
        border-radius: 12px;
        margin: 1em;
        color: white;
        box-shadow: 0 4px 8px rgba(0,0,0,0.05);
      }

      .topnav .nav-links {
        display: flex;
        gap: 1.5em;
      }

      .topnav .nav-links a {
        color: #ffffff;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        padding: 0.4em 0.6em;
        border-radius: 8px;
        transition: background-color 0.2s ease;
      }

      .topnav .nav-links a:hover {
        background-color: rgba(255, 255, 255, 0.1);
      }

      .search-bar {
        position: relative;
        width: 300px;
      }

      .search-bar input[type="text"] {
        width: 100%;
        padding: 0.6em 0.6em 0.6em 2.2em;
        border-radius: 30px;
        border: none;
        outline: none;
        background-color: #f2f2f2;
        font-size: 0.95rem;
      }

      .search-bar .icon {
        position: absolute;
        left: 10px;
        top: 50%;
        transform: translateY(-50%);
        color: #999;
      }

      .filters {
        background: #f7f7f7;
        padding: 1em;
        border-radius: 8px;
        margin-bottom: 2em;
      }

      .search-results {
        background: #fff;
        padding: 1em;
        border-radius: 8px;
        border: 1px solid #ccc;
        min-height: 200px;
      }

      @media screen and (max-width: 768px) {
        .topnav {
          flex-direction: column;
          align-items: flex-start;
          gap: 1em;
        }

        .search-bar {
          width: 100%;
        }
      }
    </style>
    <!-- Font Awesome for search icon -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  </head>
  <body class="is-preload">
    <div id="page-wrapper">

      <!-- Modern NavBar -->
      <div class="topnav">
        <div class="nav-links">
          <a href="/">Home</a>
          <a href="/about">About</a>
          <a href="/search">Search</a>
          <a href="/contact">Contact</a>
        </div>
        <div class="search-bar">
          <form method="GET" action="/search">
            <i class="fas fa-search icon"></i>
            <input type="text" name="q" placeholder="Search..." value="<%= typeof query !== 'undefined' ? query : '' %>">
          </form>
        </div>
      </div>

      <!-- Main -->
      <section id="wrapper">
        <header>
          <div class="inner">
            <h2>Search</h2>
          </div>
        </header>

        <div class="wrapper">
          <div class="inner">
            <div class="row gtr-150">
              <!-- Filters Sidebar -->
              <div class="col-4 col-12-medium">
                <section class="filters">
                  <h3 class="major">Categories</h3>
                  <ul>
                    <li><label><input type="checkbox" /> Street Food</label></li>
                    <li><label><input type="checkbox" /> Desserts</label></li>
                    <li><label><input type="checkbox" /> Vegan</label></li>
                    <li><label><input type="checkbox" /> BBQ</label></li>
                  </ul>
                  <h3 class="major">Availability</h3>
                  <ul>
                    <li><label><input type="checkbox" /> Open Now</label></li>
                    <li><label><input type="checkbox" /> Offers BOGO</label></li>
                  </ul>
                </section>
              </div>

              <!-- Search Results -->
              <div class="col-8 col-12-medium">
                <section class="search-results">
                  <% if (results && results.length > 0) { %>
                    <ul>
                      <% results.forEach(result => { %>
                        <li>
                          <h4><%= result.name %></h4>
                          <p><%= result.description %></p>
                        </li>
                      <% }) %>
                    </ul>
                  <% } else { %>
                    <p>No matches were found for your search.</p>
                  <% } %>
                </section>
              </div>
            </div>
          </div>
        </div>
      </section>

    </div>

    <!-- Scripts -->
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/js/jquery.scrollex.min.js"></script>
    <script src="/assets/js/browser.min.js"></script>
    <script src="/assets/js/breakpoints.min.js"></script>
    <script src="/assets/js/util.js"></script>
    <script src="/assets/js/main.js"></script>
  </body>
</html>
